<h1>The Jobs EJS App</h1>
<% if (user) { %>
   <p>Logged in as: "<%= user.name %>"</p>
   <form method="POST" action="/sessions/logoff">
   <button>Logoff</button>
   <input type="hidden" name="_csrf" value="<%= _csrf %>">
   </form>
<% } %>
<% if (errors) {
    errors.forEach((err) => { %>
      <div>
        Error: <%= err %>
      </div>
    <% })
  } %>
  <% if (info) {
    info.forEach((msg) => { %>
      <div>
        Info: <%= msg %>
      </div>
    <% })
  } %>
<hr />


